<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_attribute_value_view_form" model="ir.ui.view">
        <field name="name">product_attribute_value.view.form</field>
        <field name="model">product.attribute.value</field>
        <field name="arch" type="xml">
            <form string="Create Values">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="attribute_name == 'Design Customer'"/>
                            <field name="attribute_name" invisible="True" />
                            <field name="name" string="Value"/>
                            <field name="attribute_id" string="Attribute" readonly="1"/>
                            <field name="product_tmpl_id" string="Product" readonly="1"/>
                        </group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="pav_attribute_line_ids" widget="many2many_tags" string="Lines" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="is_used_on_products" invisible="1"/>
                            <field name="is_custom" invisible="1"/>
                        </group>
                        <group>
                            <field name="default_extra_price" invisible="1"/>
                            <field name="color" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="display_type" string="Display Type" invisible="1"/>
                            <field name="image" widget="image" string="Image" invisible="1"/>
                        </group>
                        <group>
                            <field name="html_color" string="Color"  invisible="1"/>
                        </group>
                    </group>
                </sheet>

            </form>

            
        </field>
    </record>

</odoo>
