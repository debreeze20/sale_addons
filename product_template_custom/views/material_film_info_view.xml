<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_material_film_info" model="ir.ui.view">
            <field name="name">material.film.info.form</field>
            <field name="model">material.film.info</field>
            <field name="arch" type="xml">
                <form string="Product Calculator Custom">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="is_material" />
                            <field name="is_active" />
                            <field name="density_gcm3"/>
                            <field name="thickness_micron" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_material_film_info" model="ir.ui.view">
            <field name="name">material.film.info.tree</field>
            <field name="model">material.film.info</field>
            <field name="arch" type="xml">
                <tree string="Product Calculator Custom">
                    <field name="name"/>
                    <field name="is_material" />
                    <field name="is_active" />
                    <field name="density_gcm3"/>
                    <field name="thickness_micron"/>
                </tree>
            </field>
        </record>

        <record id="action_material_film_info" model="ir.actions.act_window">
            <field name="name">Material Film Info</field>
            <field name="res_model">material.film.info</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem
            id="menu_material_film_info"
            action="action_material_film_info"
            name="Material Film Info"
            parent="stock.menu_product_in_config_stock"
            sequence="5"/>

    </data>
</odoo>
